{
  "name": "@buildwithsygma/test-suite",
  "description": "Testing suite for Sygma bridge.",
  "version": "0.1.0",
  "engines": {
    "node": "18.x"
  },
  "license": "MIT",
  "scripts": {
    "lint": "yarn run lint:style && yarn run lint:types",
    "lint:style": "eslint --color --ext .ts src/ test/",

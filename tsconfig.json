{
  "compilerOptions": {
    "outDir": "lib",
    "noEmit": false,
    "declaration": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "stripInternal": true,
    "module": "ESNext",
    "target": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "typeRoots": ["node_modules/@types", "types"],
    "moduleResolution": "node"
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "include": [
    "tests",
    "src",
  ],
  "exclude": [
    "node_modules"
  ]
}
